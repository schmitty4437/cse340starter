<div class="container">
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <div class="form-wrapper">
                <div class="form-container">
                    <% if (messages) { %>
                        <div class="flash-messages">
                            <%- messages() %>
                        </div>
                        <% } %>

                            <% if (errors) { %>
                                <ul class="notice">
                                    <% errors.array().forEach(error=> { %>
                                        <li>
                                            <%= error.msg %>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } %>
                                    <form id="updateForm" class="form" action="/inv/delete" method="post">
                                        <p>Confirm Deletion - The Delete is Permanent</p>

                                        <label for="inv_make">Make:</label>
                                        <input type="text" id="inv_make" name="inv_make" readonly
                                            pattern="^[a-zA-Z0-9\s]+$"
                                            value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">

                                        <label for="inv_model">Model:</label>
                                        <input type="text" id="inv_model" name="inv_model" readonly
                                            pattern="^[a-zA-Z0-9\s]+$"
                                            value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">

                                        <label for="inv_year">Year:</label>
                                        <input type="number" id="inv_year" name="inv_year" readonly min="1900"
                                            max="2099" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">

                                        <label for="inv_price">Price:</label>
                                        <input type="number" id="inv_price" name="inv_price" readonly step="0.01"
                                            value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">

                                        <button type="submit">Delete Vehicle</button>
                                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=
                                            locals.inv_id %>"
                                            <% } %>>
                                    </form>
                </div>
            </div>
</div>