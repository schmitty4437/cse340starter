<div class="container">
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

        <div class="form-wrapper">
            <div class="form-container">
                <% if (messages) { %>
                    <div class="flash-messages">
                        <%- messages() %>
                    </div>
                    <% } %>
    
                        <% if (errors) { %>
                            <ul class="notice">
                                <% errors.array().forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>
</div>