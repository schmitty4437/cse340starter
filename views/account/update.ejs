<div class="container">
    <h1>
        <%= title %>
    </h1>

    <!-- Flash messages -->
    <% if (messages) { %>
        <div class="flash-messages">
            <%- messages() %>
        </div>
        <% } %>

            <!-- Error messages -->
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!-- Account Update Form -->
                    <form id="accountUpdateForm" action="/account/update" method="post" class="form-container form">
                        <h2>Account Update</h2>
                        <p class="required-notice">All fields are required.</p>

                        <div class="form">
                            <label for="account_firstname">First Name:</label>
                            <input type="text" id="account_firstname" name="account_firstname"
                                value="<%= locals.account_firstname || '' %>" required aria-required="true">
                        </div>

                        <div class="form">
                            <label for="account_lastname">Last Name:</label>
                            <input type="text" id="account_lastname" name="account_lastname"
                                value="<%= locals.account_lastname || '' %>" required aria-required="true">
                        </div>

                        <div class="form">
                            <label for="account_email">Email:</label>
                            <input type="email" id="account_email" name="account_email"
                                value="<%= locals.account_email || '' %>" required aria-required="true">
                        </div>

                        <input type="hidden" name="account_id" value="<%= locals.account_id || '' %>">

                        <input type="submit" value="Update Account" class="submit-button">
                    </form>

                    <!-- Change Password Form -->
                    <form id="changePasswordForm" action="/account/change-password" method="post"
                        class="form-container form">
                        <h2>Change Password</h2>
                        <p class="password-info">
                            Entering a new password will replace your current password. Passwords must be
                            minimum of 12 characters and include 1 capital letter, 1 number, and 1 special
                            character.
                        </p>

                        <div class="form">
                            <label for="account_password">New Password:</label>
                            <input type="password" id="account_password" name="account_password" required
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                            <div><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number,
                                    and 1 special character.</i></div>
                            <span id="pswdBtn">Show Password</span>
                        </div>

                        <input type="hidden" name="account_id" value="<%= locals.account_id || '' %>">

                        <input type="submit" value="Change Password" class="submit-button">
                    </form>
</div>
<script src="/js/script.js"></script>