<div class="container">
    <h1>
        <%= title %>
    </h1>

    <div class="form-wrapper">
        <div class="form-container">
            <% if (messages) { %>
                <div class="flash-messages">
                    <%- messages() %>
                </div>
                <% } %>

                    <% if (errors) { %>
                        <ul class="notice">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>
                            <p>You're logged in</p>
        </div>
    </div>
</div>