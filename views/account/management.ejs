<div class="container">
    <h1>
        <%= title %>
    </h1>

    <div class="form-wrapper">
        <div class="form-container">
            <% if (messages) { %>
                <div class="flash-messages">
                    <%- messages() %>
                </div>
                <% } %>

                    <% if (errors) { %>
                        <ul class="notice">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>
                            <!-- W11 Task 3 -->
                            <!-- Greeting based on account type -->
                            <h2>Welcome <%= account_firstname %>
                            </h2>

                            <!-- Update account link for all users -->
                            <p><a href="/account/update/<%= account_id %>" class="submit-button">Update Account
                                    Information</a></p>

                            <!-- Inventory management section for Employee/Admin only -->
                            <% if (account_type==="Employee" || account_type==="Admin" ) { %>
                                <h3>Inventory Management</h3>
                                <p><a href="/inv/" class="submit-button">Manage Inventory</a></p>
                                <% } %>

                                    <!-- Final w12 Task 4 - Display user's reviews -->
                                    <h3>Your Reviews</h3>
                                    <% if (reviews && reviews.length> 0) { %>
                                        <ul class="review-list">
                                            <% reviews.forEach(review=> { %>
                                                <li>
                                                    <p>
                                                        <%= review.review_text %>
                                                    </p>
                                                    <p>Vehicle: <%= review.inv_make %>
                                                            <%= review.inv_model %>
                                                    </p>
                                                    <p>Date: <%= review.review_date.toLocaleDateString() %>
                                                    </p>
                                                    <a href="/review/edit/<%= review.review_id %>"
                                                        class="submit-button">Edit</a>
                                                    <a href="/review/delete-confirm/<%= review.review_id %>"
                                                        class="submit-button">Delete</a>
                                                </li>
                                                <% }) %>
                                        </ul>
                                        <% } else { %>
                                            <p>You have not written any reviews yet.</p>
                                            <% } %>
        </div>
    </div>
</div>