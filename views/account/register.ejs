<div class="container">

    <h1>
        <%= title %>
    </h1>

    <div class="form-wrapper">
        <div class="form-container">

            <% if (messages) { %>
                <div class="flash-messages">
                    <%- messages() %>
                </div>
                <% } %>

                    <form class="form" action="/account/register" method="post">
                        <label for="account_firstname">First Name:</label>
                        <input type="text" id="account_firstname" name="account_firstname" required>

                        <label for="account_lastname">Last Name:</label>
                        <input type="text" id="account_lastname" name="account_lastname" required>

                        <label for="account_email">Email:</label>
                        <input type="email" id="account_email" name="account_email" required>

                        <label for="account_password">Password:</label>
                        <input type="password" id="account_password" name="account_password" required>

                        <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number, and 1
                            special character.</p>

                        <span id="pswdBtn">Show Password</span>

                        <button type="submit">Register</button>
                    </form>

                    <p>Already have an account? <a href="/account/login">Login</a></p>
        </div>
    </div>
</div>