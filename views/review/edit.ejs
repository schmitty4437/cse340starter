<div class="container">
    <h1>
        <%= title %>
    </h1>

    <!-- W12 final Task 5 Display flash messages -->
    <% if (messages && messages.length> 0) { %>
        <div class="flash-messages">
            <% if (messages) { %>
                <div class="flash-messages">
                    <%- messages() %>
                </div>
                <% } %>
        </div>
        <% } %>

            <!-- W12 final Task 5 Display validation errors -->
            <% if (errors && errors.length> 0) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!-- W12 final Task 5 Form to edit review with sticky values -->
                    <form action="/review/update" method="post" class="form-container">
                        <div class="form-group">
                            <label for="review_text">Review Text:</label>
                            <textarea id="review_text" name="review_text"
                                required><%= locals.review_text || '' %></textarea>
                        </div>
                        <input type="hidden" name="review_id" value="<%= locals.review_id || '' %>">
                        <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>">
                        <input type="submit" value="Update Review" class="submit-button">
                    </form>
</div>